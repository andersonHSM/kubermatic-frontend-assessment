{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"@api/*": ["apps/api/src/*"],
			"@db/*": ["libs/db/*"],
			"@web/*": ["apps/web/src/*"]
		}
	},
	"include": ["src"]
}
